@model Library_Management_ASP.Net.Models.category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<style>

    .centered-button {
        margin: 0 auto;
        width: 250px;
        font-size: 17px;
        margin-bottom: 10px;
    }

    .btn btn-primary {
        width: 250px;
    }

    .form-control {
        width: 400px;
        margin-bottom: 0;
    }

    .form-horizontal {
        margin: auto;
        width: 50%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: left;
    }

    .control-label {
        padding-bottom: 7px;
    }

    .form-group {
        margin-bottom: 0px;
    }
</style>

<!-- ======= Breadcrumbs ======= -->
<div class="breadcrumbs d-flex align-items-center" style="background-image: url('/UpConstruction/assets/img/hero-carousel/13.jpg');">
    <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">

        <h2>CREATE</h2>

    </div>
</div><!-- End Breadcrumbs -->

<div style="box-sizing: border-box; padding: 5px; border: 1px solid #ccc; margin: 50px auto; width: calc(70% - 40px); height: calc(100% - 40px); text-align: center;">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group" style="margin-bottom: 6px; margin-top: 12px;">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.catname, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.catname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.catname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 12px; margin-top: 10px;">
                <div class="col-md-10">
                    <div class="form-group">
                        @Html.LabelFor(model => model.status, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div>
                <input type="submit" value="Create" class="btn btn-success btn-block centered-button" style="margin-bottom: 10px; margin-top: 15px;" />
            </div>
        </div>
    }

    <div style="margin-bottom: 8px;">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-block centered-button" })
    </div>

</div>