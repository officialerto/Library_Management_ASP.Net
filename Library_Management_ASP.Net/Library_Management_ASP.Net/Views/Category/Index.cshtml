@model IEnumerable<Library_Management_ASP.Net.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div style="box-sizing: border-box; padding: 20px; border: 1px solid #ccc; margin: 50px auto; width: calc(100% - 40px); height: calc(100% - 40px);">


    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    <br />
    <br />


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.catname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.catname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
</div>